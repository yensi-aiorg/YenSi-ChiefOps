# .env.example -- ChiefOps Step Zero Configuration

# ── AI Configuration ──────────────────────────────────
AI_ADAPTER=cli                          # cli | openrouter | mock
AI_CLI_TOOL=claude                      # claude | codex | gemini
AI_CLI_TIMEOUT=120                      # Subprocess timeout in seconds
OPENROUTER_API_KEY=                     # Required only when AI_ADAPTER=openrouter
OPENROUTER_MODEL=anthropic/claude-sonnet-4-20250514

# ── Database ──────────────────────────────────────────
MONGO_URL=mongodb://chiefops-mongo:27017
MONGO_DB_NAME=chiefops
REDIS_URL=redis://chiefops-redis:6379/0

# ── Citex RAG System ─────────────────────────────────
CITEX_API_URL=http://citex-api:8000

# ── Privacy ───────────────────────────────────────────
PII_REDACTION_ENABLED=true

# ── Application ───────────────────────────────────────
LOG_LEVEL=INFO
UPLOAD_MAX_FILE_SIZE_MB=500
UPLOAD_MAX_BATCH_SIZE_MB=2048
ENVIRONMENT=development

# ── Frontend ──────────────────────────────────────────
VITE_API_URL=http://localhost:23101
VITE_WS_URL=ws://localhost:23101

# ── Port Allocation ──────────────────────────────────
# Frontend:        23100
# Backend:         23101
# MongoDB:         23102
# Redis:           23103
# Citex API:       23104
# Citex Qdrant:    23105
# Citex MongoDB:   23106
# Citex MinIO:     23107
# Citex Neo4j:     23108
# Citex Redis:     23109

# ── Citex Internal ───────────────────────────────────
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
NEO4J_PASSWORD=chiefops-neo4j
